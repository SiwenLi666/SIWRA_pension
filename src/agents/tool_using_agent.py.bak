                            return self.process(state)
                        except Exception:
                            state["response"] = llm_response
                            return state
                    else:
                        # If still missing, LLM asks again (up to max follow-ups)
                        state["response"] = llm_response
                        return state

                # --- K√∂r som vanligt, men om kritiska parametrar saknas, anv√§nd LLM f√∂r f√∂ljdfr√•ga + visa antaganden ---
